<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bagian warna merah di kiri -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna Merah -->
        </shape>
    </item>

    <!-- Bagian warna biru di kanan -->
    <item android:left="250dp"><!-- Membuat setengah bagian kanan biru -->
        <shape android:shape="rectangle">
            <solid android:color="#FFE00104"/> <!-- Warna Biru -->
        </shape>
    </item>

</layer-list>

