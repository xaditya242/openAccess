<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merah">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_weight="2.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Smart \nDoor Lock"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="33sp"/>
            <ImageView
                android:id="@+id/settingBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/setting"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="center"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="@id/atas"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFE7E5E5"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="@id/atas"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="65dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/onOff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp"
                        android:backgroundTint="@color/black">
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
<!--                Corner Luar = Padding + Corner Dalam-->
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lockUnlockBt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="180dp"
                android:backgroundTint="#FFE7E5E5"
                android:layout_gravity="bottom|center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardButton"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="180dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/kunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/unlock"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opened"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center|bottom"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/doorState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Door State"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:src="@drawable/suhu"/>
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="20dp"
                android:text="24 C"
                android:textSize="40sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>